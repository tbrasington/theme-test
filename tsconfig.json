{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/esm",
    "declaration": true,
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "theme-ui",
    "rootDir": ".",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@theme": ["src/theme"],
      "@theme/*": ["src/theme/*"],
      "@design-system": ["src/index.ts"],
      "@stories/*": ["src/__stories/*"],
      "@tests/*": ["src/__tests/*"],
      "@test-utils": ["utils/test-utils.tsx"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.stories.*", "**/*.test.*","dist"]
}
